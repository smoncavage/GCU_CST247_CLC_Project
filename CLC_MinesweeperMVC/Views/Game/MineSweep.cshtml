
@model List<CLC_MinesweeperMVC.Models.ButtonModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MineSweep</title>
</head>
<body>
    <div style="text-align:center">
        @using(Html.BeginForm("Index", "Game", FormMethod.Post)) {
            <table align="center" id="Table" cellspacing="0">
                @{
                    var difficulty = ViewBag.Message*10;
                    var brdSize = difficulty;
                }
                @for(int cl = 0; cl<brdSize; cl++) {
                    <tr>
                    </tr>
                    for(int rw = 0; rw<brdSize; rw++) {

                        <td>
                            <button style="width:50px; height:50px" id="mine" type="submit" name="mine" value="1">
                            </button>
                        </td>
                    }
                }

            </table>
        }
    </div>
</body>
</html>
